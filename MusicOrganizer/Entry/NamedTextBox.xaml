<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicOrganizer.Entry" x:Class="MusicOrganizer.Entry.NamedTextBox" 
             mc:Ignorable="d" x:Name="namedTextBox">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="textBox" Text="{Binding Text, ElementName=namedTextBox, FallbackValue='Text'}" FontSize="20" Grid.Row="0" Background="{DynamicResource brush1}" BorderThickness="0,0,0,0" Foreground="{DynamicResource brush4}"/>
        <TextBlock x:Name="labelBlock" Text="{Binding Label, ElementName=namedTextBox, FallbackValue='Label'}" FontSize="20" Grid.Row="1" Background="{DynamicResource brush1}" Foreground="{DynamicResource brush2}"/>
        <Rectangle Margin="1,0,1,0" Stroke="Black" StrokeThickness="0" Height="1" VerticalAlignment="Bottom" Fill="{DynamicResource brush2}"/>
    </Grid>
</UserControl>
