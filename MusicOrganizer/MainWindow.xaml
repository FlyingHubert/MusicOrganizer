<Window x:Class="MusicOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicOrganizer"
        xmlns:table="clr-namespace:MusicOrganizer.Table"
        xmlns:entry="clr-namespace:MusicOrganizer.Entry"
        xmlns:mixed="clr-namespace:MusicOrganizer.Mixed"
        xmlns:topbar="clr-namespace:MusicOrganizer.TopBar"
        mc:Ignorable="d" Height="800" Width="1400" Title="Music Organizer" Background="{DynamicResource brush1}">
    <Window.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="20" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>


        <topbar:TopBarView DataContext="{Binding TopBarViewModel}" Grid.Column="1"/>
        <entry:EntryView DataContext="{Binding EntryViewModel}" Grid.RowSpan="2" />
        <table:TableView Grid.Column="1" Grid.Row="1" DataContext="{Binding TableViewModel}" />
    </Grid>
</Window>
