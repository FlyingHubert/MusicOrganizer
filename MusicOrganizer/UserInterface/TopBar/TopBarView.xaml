<UserControl x:Class="MusicOrganizer.TopBar.TopBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicOrganizer.TopBar"
             xmlns:entry="clr-namespace:MusicOrganizer.Entry"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="600" Background="Transparent">
    <Grid Margin="10,0,5,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <entry:NamedTextBox Label="Suche" Text="{Binding SearchString, UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource brush3}"/>
    </Grid>
</UserControl>
